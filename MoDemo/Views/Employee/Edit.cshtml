@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<form method="post" asp-controller="Employee" asp-action="SaveEdit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" class="form-control" asp-for="Id" />
    <br />
    <div>
        <label>Name</label>
        <input type="text" class="form-control" name="Name" id="Name" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />

    <div>
        <label>Salary</label>
        <input type="number" class="form-control" name="Salary" id="Salary" value="@Model.Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label>Address</label>
        <input type="text" class="form-control" name="Address" id="Address" value="@Model.Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label>Image</label>
        <input type="text" class="form-control" name="Image" id="Image" value="@Model.Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <div>
        <label>Department</label>
        <select class="form-control" name="Dept_Id" id="Dept_Id">
            @foreach (Department deptitem in ViewBag.Deptlist)
            {
                if (Model.Dept_Id == deptitem.Id)
                {
                    <option value="@deptitem.Id" selected>@deptitem.Name</option>
                }
                else
                {
                    <option value="@deptitem.Id">@deptitem.Name</option>
                }

            }
        </select>
    </div>
    <br />
    <center>
        <input type="submit" value="Edit" class="btn btn-success" />
        <input type="reset" value="cancel" class="btn btn-warning" />
        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back to data</a>
    </center>
</form>
